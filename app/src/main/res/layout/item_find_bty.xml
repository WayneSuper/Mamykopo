<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/drawee_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:roundAsCircle="true"
            app:placeholderImage="@drawable/wel_head"
            app:actualImageScaleType="focusCrop"
            app:placeholderImageScaleType="centerCrop"
            />

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XXXX"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/drawee_icon"
                android:textColor="@color/common_text_color"
                android:textSize="@dimen/sp16"
                android:layout_marginLeft="8dp"
                />

        <TextView
            android:id="@+id/text_age_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXXX"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/text_name"
            android:layout_alignLeft="@+id/text_name"
            android:textColor="@color/comm_text_gray"
            android:textSize="@dimen/sp14"
            />

        <TextView
            android:id="@+id/text_show_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXXX"
            android:layout_alignParentRight="true"
            android:textColor="@color/comm_text_gray"
            android:textSize="@dimen/sp14"
            />

        </RelativeLayout>

    <TextView
        android:id="@+id/text_artical_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXXX"
        android:layout_marginTop="8dp"
        android:textColor="@color/comm_text_gray"
        android:textSize="@dimen/sp16"

        />


    <LinearLayout
        android:id="@+id/ll_small_image_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">

        </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_marginTop="10dp">
        <TextView
            android:id="@+id/text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXXX"
            android:textColor="@color/comm_text_gray"
            android:textSize="@dimen/sp14"
            />

        <ImageView
            android:layout_toLeftOf="@+id/text_replys_num"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/relist_icon"
            />

        <TextView
            android:id="@+id/text_replys_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2222"
            android:layout_marginLeft="5dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/comm_text_gray"
            android:textSize="@dimen/sp14"
            />
        </RelativeLayout>

</LinearLayout>