<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/info_bg5" android:paddingTop="10dp" android:paddingBottom="10dp">

    <LinearLayout
        android:id="@+id/ll_header_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_margin_left"
        android:gravity="center"
        android:orientation="vertical">

        <cn.wayne.mamypoko.widget.CircleImageView
            android:id="@+id/civ_header_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/wel_head"
            app:border_color="@color/head_border_color"
            app:border_width="1dp" />

        <Button
            android:id="@+id/btn_to_percenter"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/select_shape_circle_btn"
            android:text="@string/personal_text"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_name_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/ll_header_container"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/ll_header_container"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/head_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:maxLength="12"
            android:singleLine="true"
            android:text="风再起时"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/head_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/personal_text"
            android:textColor="@color/white"
            android:textSize="@dimen/sp12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_margin_right"
        android:orientation="vertical">

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="已签到\n 1天"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="@drawable/icon_sign_in"
            android:gravity="center"
            android:textSize="@dimen/sp12"
            />
    </LinearLayout>

</RelativeLayout>