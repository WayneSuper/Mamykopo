<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:background="@drawable/common_btn_bg"
        android:padding="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_type"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/eat_1"
            />

        <TextView
            android:id="@+id/text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/comm_text_gray"
            android:textSize="@dimen/sp16"
            />

    </LinearLayout>
    <ImageView
        android:id="@+id/view_bottom_line"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/ll_container"
        android:layout_height="0.67dp"
        android:layout_alignLeft="@+id/ll_container"
        android:layout_alignRight="@+id/ll_container"
        android:background="@drawable/divider_line"/>
    <ImageView
        android:id="@+id/view_right_line"
        android:layout_width="0.67dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:layout_alignTop="@+id/ll_container"
        android:layout_alignBottom="@+id/ll_container"
        android:layout_height="match_parent"
        android:background="@drawable/divider_line_2"/>
</RelativeLayout>