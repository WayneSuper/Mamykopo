<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolBarStyle">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
        <item name="android:background">@color/actionBarColor</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:background">@color/actionBarColor</item>
        <item name="android:gravity">left</item>
      <item name="android:textColor">@color/white</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">#ffe8e8e8</item>
        <item name="android:itemBackground">@color/translate</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/windowBackgroundColor</item>
        <item name="colorPrimary">@color/actionBarColor</item>
        <item name="colorPrimaryDark">@color/actionBarColor</item>
        <item name="android:actionOverflowButtonStyle">@style/MamyOverflowButtonStyle</item>
    </style>
    <style name="MamyOverflowButtonStyle">
        <item name="android:background">@drawable/ic_more</item>
        <item name="android:src">@drawable/ic_more</item>
    </style>
</resources>
